# Alxarafe MariaDB Configuration
[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]
# Basic settings
user = mysql
port = 3306
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Connection limits
max_connections = 100
connect_timeout = 5
wait_timeout = 600
max_allowed_packet = 64M

# Query Cache (Disabled for modern MariaDB versions performance)
query_cache_type = 0
query_cache_size = 0

# InnoDB settings for better performance on development
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M
innodb_flush_log_at_trx_commit = 2
innodb_file_per_table = 1

[mysqldump]
quick
quote-names
max_allowed_packet = 64M
