{#
@file input-button.html.twig
@author Alxarafe <info@alxarafe.com>

Default theme implementation to display a Bootstrap Input+Button component.

@var id:          Your id
@var name:        Your name
@var class:       Your class
@var position:    left, right
@var texts:       Your texts, in order for respective input-group

How to use it:
    {% include "@Core/components/input-button.html.twig" with {id:'myInputButtonId', name:'myInputButtonName', class: '', position: 'left', texts: ['Text1', 'Text2']} %}
    {% include "@Core/components/input-button.html.twig" with {id:'myInputButtonId', name:'myInputButtonName', class: '', position: 'right', texts: ['Text1', 'Text2']} %}
#}

{% set randValue = random() %}

{% set id = id | default('inputButtonId' ~ randValue) %}
{% set name = name | default('inputButtonName' ~ randValue) %}
{% set type = type | default('text') %}
{% set class = class | default('') %}
{% set position = position | default('left') %}

<div class="input-group {{ class }}">
    {% if position == 'left' %}
        <span class="input-group-btn">
            <button id="button_{{ id }}" name="button_{{ name }}" class="btn btn-default" type="button">
              {% if texts[0] is defined %}{{ texts[0] | raw }}{% endif %}
            </button>
        </span>
        <input id="input_{{ id }}" name="input_{{ name }}" type="text" class="form-control"
                {% if texts[1] is defined %} placeholder="{{ texts[1] | raw }}"{% endif %}>
    {% elseif position == 'right' %}
        <input id="input_{{ id }}" name="input_{{ name }}" type="text" class="form-control"
               {% if texts[0] is defined %}placeholder="{{ texts[0] | raw }}"{% endif %}>
        <span class="input-group-btn">
            <button id="button_{{ id }}" name="button_{{ name }}" class="btn btn-default" type="button">
              {% if texts[1] is defined %}{{ texts[1] | raw }}{% endif %}
            </button>
      </span>
    {% else %}
        Something is wrong with your code!
    {% endif %}
</div>
