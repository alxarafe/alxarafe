{#
    @file responsive-embed.html.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Responsive Embed component.

    @var id:          Your id
    @var name:        Your name
    @var class:       embed-responsive-16by9 or embed-responsive-4by3
    @var src:         Your src iframe

    How to use it:
        {% include "@Core/components/responsive-embed.html.twig" with {id:'myResponsiveEmbedId', name:'myResponsiveEmbedName', class: 'embed-responsive-16by9', src: 'data:image/svg+xml;base64,'} %}
#}

{% set randValue = random() %}

{% set id = id | default('responsiveEmbedId' ~ randValue) %}
{% set name = name | default('responsiveEmbedName' ~ randValue) %}
{% set class = class | default('') %}
{% set value = value | default('') %}

<div id="{{ id }}" name="{{ name }}" class="embed-responsive {{ class }}">
    {% if src is defined %}
        <iframe class="embed-responsive-item" src="{{ src }}"></iframe>
    {% endif %}
</div>
