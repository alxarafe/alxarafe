{#
@file glyphicon.html.twig
@author Alxarafe <info@alxarafe.com>

Default theme implementation to display a Bootstrap Glyphicon component.

@var id:          Your id
@var name:        Your name
@var class:       btn-default, btn-success, btn-info, btn-warning, btn-danger or button sizes

How to use it:
    {% include "@Core/components/glyphicon.html.twig" with {id:'myGlyphiconId', name:'myGlyphiconName', class: 'glyphicon glyphicon-asterisk'} %}
#}

{% set randValue = random() %}

{% set id = id | default('glyphiconId' ~ randValue) %}
{% set name = name | default('glyphiconName' ~ randValue) %}
{% set class = class | default('glyphicon glyphicon-asterisk') %}

<span id="{{ id }}" name="{{ name }}" class="{{ class }}" aria-hidden="true"></span>
