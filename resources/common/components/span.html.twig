{% set randValue = random() %}

{% set id = id | default('spanId' ~ randValue) %}
{% set name = name | default('spanName' ~ randValue) %}
{% set class = class | default('') %}
{% set value = value | default('') %}

<span id="{{ id }}" name="{{ name }}" class="{{ class }}">
    {{ value | raw }}
</span>
