{% set customId = 'carousel' ~ random() %}
<div{% if id is defined %} id="{{ id }}"{% else %} id="{{ customId }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %} class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% for image in images %}
            <div class="carousel-item {{ classes[loop.index0] }}">
                <img class="d-block w-100" src="{{ image }}" alt="{{ alts[loop.index0] }}">
            </div>
        {% endfor %}
    </div>
    {% if controls == true %}
        <a class="carousel-control-prev" href="#{% if id is defined %}{{ id }}{% else %}{{ customId }}{% endif %}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#{% if id is defined %}{{ id }}{% else %}{{ customId }}{% endif %}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    {% endif %}
</div>