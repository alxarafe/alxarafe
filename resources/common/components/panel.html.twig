{#
@file panel.html.twig
@author Alxarafe <info@alxarafe.com>

Default theme implementation to display a Bootstrap Panel component.

@var id:          Your id
@var name:        Your name
@var class:       panel-default, panel-primary, panel-success, panel-info, panel-warning, panel-danger
@var header:      Your header type: h1, h2, h3, ...
@var header_text: Your text header
@var body_text:   Your text body
@var footer_text: Your text footer

How to use it:
    {% include "@Core/components/panel.html.twig" with {
    data:{id:'myPanelId1',
    name:'myPanelName1',
    class:'panel-default',
    header_text: 'Title',
    body_text: 'Body',
    footer_text: 'Footer'}}
    %}
#}

{% set randValue = random() %}

{% set id = id | default('panel' ~ randValue) %}
{% set name = name | default('panel' ~ randValue) %}
{% set class = class | default('panel panel-default') %}
{% set header = header | default('panel-title') %}
{% set header_text = header_text | default('') %}
{% set body_text = body_text | default('') %}
{% set footer_text = footer_text | default('') %}

<div id="{{ id }}" name="{{ name }}" class="{{ class }}">
    {% if header_text != '' %}
        <div class="panel-heading">
            <h2 {{ header }}>
                <h1>{{ header_text | raw }}</h1>
            </{{ header }}></h2>
        </div>
    {% endif %}
    {% if body_text != '' %}
        <div class="panel-body">
            {{ body_text | raw }}
        </div>
    {% endif %}
    {% if footer_text != '' %}
        <div class="panel-footer">
            {{ footer_text | raw }}
        </div>
    {% endif %}
</div>
