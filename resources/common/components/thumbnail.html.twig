{#
    @file thumbnail.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Thumbnail component.

    @var id:          Your id
    @var name:        Your name
    @var class:       img-responsive, img-rounded, img-circle, img-thumbnail
    @var message:     Your text message
    @var path:        Path to the image
    @var link:        Link or null

    How to use it:
        {% include "Components/BS3/thumbnail.twig" with {id:'myThumbnailId', name:'myThumbnailName', class: 'img-responsive', message: 'Responsive image', link: '#', path: 'data:image/svg+xml;base64,'} %}
        {% include "Components/BS3/thumbnail.twig" with {id:'myThumbnailId', name:'myThumbnailName', class: 'img-responsive', message: 'Responsive image', link: null, path: 'data:image/svg+xml;base64,'} %}
#}

{% if links is defined and link != null %}
<a href="{{ link }}" class="thumbnail">
    {% endif %}
    <img{% if id is defined %} id="{{ id }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %}{% if path is defined %} src="{{ path }}"{% endif %}{% if class is defined %} class="{{ class }}"{% endif %}{% if message is defined %}
            alt="{{ message | raw }}{% endif %}">
    {% if link != null %}</a>{% endif %}