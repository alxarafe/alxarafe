{% set randValue = random() %}

{% set id = id | default('inputId' ~ randValue) %}
{% set name = name | default('inputName' ~ randValue) %}
{% set type = type | default('text') %}
{% set class = class | default('') %}
{% set value = value | default('') %}
{% set min = min | default('') %}
{% set max = max | default('') %}
{% set pattern = pattern | default('') %}
{% set placeholder = placeholder | default('') %}

<div class="media">
    <div class="media-left media-bottom">
        <a href="#">
            <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 64px; height: 64px;"
                 src="{{ value }}"
                 data-holder-rendered="true">
        </a>
    </div>
    <div class="media-body">
        <h4 class="media-heading">Bottom aligned media</h4>
        {% if titles[loop.index0] is defined %}
            <h5 class="{{ textClass }}">{{ titles[loop.index0] | raw }}</h5>
        {% endif %}
        {% if texts[loop.index0] is defined %}
            {{ texts[loop.index0] | raw }}
        {% endif %}
    </div>
</div>
