{#
    @file media-object.html.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Media Object component.

    @var id:          Your id
    @var name:        Your name
    @var titles:      Array of titles
    @var texts:       Array of texts
    @var imgSrc:      Array of images src
    @var imgHPos:     Array of image horizontal position (left    or right)
    @var imgVPos:     Array of image vertical position (top, middle, bottom)
    @var imgAlt:      Array of image alt
    @var imgStyle:    Array of image style

    WARNING: Length of arrays (must be the same)

    How to use it:
        {% include "@Core/components/media-object.html.twig" with {id:'idImg', name:'nameImg', titles:'', texts:'', imgSrc:'imgSrcPath', imgHPos:'', imgVPos:'', imgAlt:'', imgStyle:''} %}
#}

<div class="media">
    <div class="media-left">
        <a href="#">
            <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 64px; height: 64px;"
                 src="data:image/svg+xml;base64,"
                 data-holder-rendered="true">
        </a>
    </div>
    <div class="media-body">
        <h4 class="media-heading">Top aligned media</h4>
        {% if titles[loop.index0] is defined %}
            <h5 class="{{ textClass }}">{{ titles[loop.index0] | raw }}</h5>
        {% endif %}
        {% if texts[loop.index0] is defined %}
            {{ texts[loop.index0] | raw }}
        {% endif %}
    </div>
</div>

