{#
@file alert.html.twig
@author Alxarafe <info@alxarafe.com>

Default theme implementation to display a Bootstrap Alert component.

@var data:             Can contains all this key => value:
@var id:          Your id
@var name:        Your name
@var class:       alert-success, alert-info, alert-warning, alert-danger
@var dismissible: bool
@var message:     Your text message

How to use it:
    {% include "@Core/components/alert.html.twig" with {id:'myAlertId', name:'myAlertName', class: 'alert-success', dismissible: true, message: '<strong>Hello World</strong> Testing templating BS components with Twig!'} %}
#}

{% set randValue = random() %}

{% set id = id | default('alertId' ~ randValue) %}
{% set name = name | default('alertName' ~ randValue) %}
{% set class = class | default('alert alert-success') %}
{% set dismissible = dismissible | default(false) %}
{% set message = message | default('Write a text here') %}

<div id="{{ id }}" name="{{ name }}" class="{{ class }} {% if dismissible==true %}alert-dismissible fade in{% endif %}" role="alert">
    {% if dismissible==true %}
        <button type="button" class="close" data-dismiss="alert" aria-label="{{ trans('close') }}">
            <span aria-hidden="true">&times;</span>
        </button>
    {% endif %}
    {{ message | raw }}
</div>
