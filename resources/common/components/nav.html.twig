{#
    @file nav.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Navs component.

    @var id:          Your id
    @var name:        Your name
    @var type:        nav-tabs, nav-pills (nav-stacked, nav-justified)
    @var classes:     Array of classes items: active, disabled or null
    @var texts:       Array of your texts items
    @var links:       Array of links items

    How to use it:
        {% include "components/nav.html.twig" with {data:{id:'myNavId1', name:'myNavName1', type:'nav-tabs', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
        {% include "components/nav.html.twig" with {data:{id:'myNavId2', name:'myNavName2', type:'nav-tabs nav-justified', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
        {% include "components/nav.html.twig" with {data:{id:'myNavId3', name:'myNavName3', type:'nav-tabs nav-stacked', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
        {% include "components/nav.html.twig" with {data:{id:'myNavId4', name:'myNavName4', type:'nav-pills', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
        {% include "components/nav.html.twig" with {data:{id:'myNavId5', name:'myNavName5', type:'nav-pills nav-justified', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
        {% include "components/nav.html.twig" with {data:{id:'myNavId6', name:'myNavName6', type:'nav-pills nav-stacked', classes: ['active', null, null], texts: ['Home', 'Profile', 'Messages'], links: ['#home', '#profile', '#messages']}} %}
#}

<ul{% if id is defined %} id="{{ id }}"{% endif %}{% if name is defined %} name="{{ name }}"{% endif %}
        class="nav{% if type is defined %} {{ type }}{% endif %}">
    {% for i in texts %}
        {% if links[loop.index0] is defined and links[loop.index0]!=null %}
            <li role="presentation"{% if classes[loop.index0] is defined and classes[loop.index0] != null %} class="{{ classes[loop.index0] }}"{% endif %}>
                <a href="{{ links[loop.index0] }}">
                    {% if texts[loop.index0] is defined %}
                        {{ texts[loop.index0] | raw }}
                    {% endif %}
                </a>
            </li>
        {% endif %}
    {% endfor %}
</ul>