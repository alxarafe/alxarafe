{#
    @file textarea.html.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Textarea component.

    @var id:          Your id
    @var name:        Your name
    @var rows:        Your rows number
    @var text:        Your text

    How to use it:
        {% include "@Core/components/textarea.html.twig" with {data:{id:'myTextareaId', name:'myTextareaName', rows:'3', text: 'My sample text'}} %}
#}

{% set randValue = random() %}

{% set id = data.id | default('textareaId' ~ randValue) %}
{% set name = data.name | default('textareaName' ~ randValue) %}
{% set row = data.row | default('2') %}
{% set text = data.text | default('Escribe un texto') %}


<textarea id="{{ id }}" name="{{ name }}" class="form-control" rows="{{ row }}"> {{ text | raw }} </textarea>
