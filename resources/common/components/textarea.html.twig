{#
    @file textarea.html.twig
    @author Alxarafe <info@alxarafe.com>

    Default theme implementation to display a Bootstrap Textarea component.

    @var id:          Your id
    @var name:        Your name
    @var rows:        Your rows number
    @var text:        Your text

    How to use it:
        {% include "@Core/components/textarea.html.twig" with {id:'myTextareaId', name:'myTextareaName', rows:'3', text: 'My sample text'} %}
#}

{% set randValue = random() %}

{% set id = id | default('textareaId' ~ randValue) %}
{% set name = name | default('textareaName' ~ randValue) %}
{% set row = row | default('2') %}
{% set text = text | default('') %}

{% if readonly %}
    {% set data = {'id': id, 'name': name, 'value' : text | raw} %}
    {% include "@Core/components/span.html.twig" with {data: data} %}
{% else %}
    <textarea id="{{ id }}" name="{{ name }}" class="form-control" rows="{{ row }}">{{ text | raw }}</textarea>
{% endif %}
