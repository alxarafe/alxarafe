{% extends "@Core/index.twig" %}

{% block title %}{{ trans('new') }} {{ trans(ctrl.title) }}{% endblock %}

{% block extraStylesheets %}
    {{ parent() }}
    {#<link rel="stylesheet" type="text/css" href="{{ getResourceUri('/css/common.css') }}">#}
{% endblock %}

{% block body %}
    {% import "master/autoforms.twig" as forms %}

    {% set encType = '' %}
    {% if ctrl.encType is not empty %}
        {% set encType = 'enctype="' ~ ctrl.encType ~ '"' %}
    {% endif %}

    {% set formType = 'form-horizontal' %}
    {% if ctrl.viewData.form-type is not empty %}
        {% set formType = ctrl.viewData.form-type %}
    {% endif %}

    <form action="{{ ctrl.url ~ '&' ~ constant('METHOD_CONTROLLER') ~ '=edit' }}" method="post" accept-charset="utf-8" {{ encType }} class="{{ formType }}">
        {% set listFields = ctrl.components %}
        {% for item in listFields %}
            <div class="row">
                <div class="col-xs-3 col-sm-2 col-md-1">
                    {% include "@Core/components/span.html.twig" with {id: 'label~' ~ item.id, name: 'label~' ~ item.id, class: '', value: item.label} %}
                </div>
                <div class="col-xs-9 col-sm-10 col-md-11">
                    {{ item.toHtml() | raw }}
                </div>
            </div>
        {% endfor %}

        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <a name="cancel" href="{{ ctrl.url }}" class="btn btn-danger btn-sm" type="submit" onClick="allowClose();" formnovalidate>
                    <i class="fas fa-chevron-left"></i>
                    {{ trans('back') }}
                </a>
            </div>
            <div class="col-xs-6 text-right">
                <button name="action" type="submit" class="btn btn-primary btn-sm" value="save" onClick="allowClose();">
                    <i class="fas fa-save"></i>
                    {{ trans('save-changes') }}
                </button>
            </div>
        </div>
    </form>
{% endblock %}

{% block extraJavascriptsFooter %}
    {{ parent() }}
    <script type="text/javascript" src="{{ getResourceUri('/js/common.js') }}"></script>
{% endblock %}
