{% extends "index.twig" %}

{% block bodytitle %}
    <h3>{{ trans(ctrl.pageDetails().title) }}</h3>
    <small>{{ trans(ctrl.pageDetails().description) }}</small>
{% endblock %}

{% block body %}
    <form action="{{ constant('BASE_URI') }}/index.php?{{ constant('CALL_CONTROLLER') }}=ExportStructure&{{ constant('METHOD_CONTROLLER') }}=main" method='post' accept-charset="utf-8">
        <div class="container-fluid">
            {% if (message) %}{{ message }}{% endif %}


            <div class="row">
                <div class="col-sm-12">
                    {{ trans('select-tables-to-export') }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">&nbsp;</div>
            </div>
            <div class="row">
                {% for table in ctrl.tables %}
                    <div class="col-sm-2">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="tables[]" value="{{ table }}"> {{ table }}
                            </label>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-sm-12">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <button name="action" type="submit" class="btn btn-default btn-danger" value="cancel">
                        {{ trans('exit') }}
                    </button>
                </div>
                <div class="col-sm-6 text-right">
                    <button name="action" type="submit" class="btn btn-default btn-primary" value="export-selected">
                        {{ trans('export-selected') }}
                    </button>
                    <button name="action" type="submit" class="btn btn-default btn-primary" value="export-all">
                        {{ trans('export-all') }}
                    </button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
