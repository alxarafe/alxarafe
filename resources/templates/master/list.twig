    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>
    {# Additional for BS3 style #}
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-responsive-bs/js/responsive.bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/jszip/dist/jszip.min.js') }}"></script>
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/pdfmake/build/pdfmake.min.js') }}"></script>
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/pdfmake/build/vfs_fonts.js') }}"></script>
    {# Additional for BS3 style #}
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-buttons/js/buttons.html5.min.js') }}"></script>
    {# Additional for BS3 style #}
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-buttons/js/buttons.print.min.js') }}"></script>
    {# Additional for BS3 style #}
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-buttons/js/buttons.colVis.min.js') }}"></script>

    <script type="text/javascript" src="{{ getResourceUri('/resources/common/js/common.js') }}"></script>
    <script type="text/javascript">
        if ('{{ ctrl.code }}' !== '') {
            if (typeof (tables) == 'undefined') {
                var tables = new Array();
            }
            var pkField = '{{ ctrl.model.getIdField() }}';
            tables['{{ ctrl.code }}'] = {
                'rowsPerPage': {{ constant('DEFAULT_ROWS_PER_PAGE') }},
                'url': '{{ (ctrl.url ~ '&' ~ constant('METHOD_CONTROLLER') ~ '=ajaxTableData')|raw }}',
                'columns': '{{ ctrl.getDefaultColumnsSearch()|json_encode|raw }}',
                'pkField': '{{ ctrl.model.getIdField() }}',
            };
        }
    </script>
{% endblock %}
