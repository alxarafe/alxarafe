{% extends "index.twig" %}

{% block title %}{{ lang.trans('list-of') }} {{ lang.trans(ctrl.title) }}{% endblock %}

{% block extraStylesheets %}
    {{ parent() }}
    {# Additional for BS3 style #}
    <link rel="stylesheet" href="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net-colreorder-bs/css/colReorder.bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    {% import "master/autoforms.twig" as forms %}

    {% set encType = '' %}
    {% if ctrl.encType is not empty %}
        {% set encType = 'enctype="' ~ ctrl.encType ~ '"' %}
    {% endif %}
    <form action="{{ ctrl.url }}" method="post" accept-charset="utf-8" {{ encType }}>
        {% set baseLink = ctrl.url ~ '&' ~ constant('METHOD_CONTROLLER') %}
        {% set createLink = baseLink ~ '=create' ~ '&' ~ ctrl.model.getIdField() ~ '=' %}
        <div class="row">
            <div class="col-xs-1">
                <a name="cancel" class="btn btn-danger btn-sm" href="{{ constant('BASE_URI') }}/index.php">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="hidden-xs hidden-sm hidden-md">&nbsp;{{ lang.trans('back') }}</span>
                </a>
            </div>
            <div class="col-xs-5">
                {% if ctrl.getExtraActions() is not empty %}
                    {% if ctrl.getExtraActions()|length > 1 %}
                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="extraActions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                {{ lang.trans('extra-actions') }}
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="extraActions">
                                {% for extraAction in ctrl.getExtraActions() %}
                                    <li>
                                        <a href="{{ extraAction.link }}">
                                            <span class="glyphicon {{ extraAction.icon }}" aria-hidden="true"></span>
                                            &nbsp;{{ lang.trans(extraAction.text) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        {% for extraAction in ctrl.getExtraActions() %}
                            <a href="{{ extraAction.link }}" class="btn btn-{{ extraAction.type }} btn-sm">
                                <span class="glyphicon {{ extraAction.icon }}" aria-hidden="true"></span>
                                <span class="hidden-md">&nbsp;{{ lang.trans(extraAction.text) }}</span>
                            </a>
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </div>
            <div class="col-xs-6 text-right">
                <a href="{{ createLink }}" class="btn btn-success btn-sm">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    <span class="hidden-xs hidden-sm hidden-md">&nbsp;{{ lang.trans('add-new') }}</span>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">&nbsp;</div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {% set tableHeader = ctrl.getTableHeader() %}
                {% set tableBody = ctrl.getTableBody() %}
                {% set tableFooter = ctrl.getTableFooter() %}

                <div class="table-responsive ">
                    <table id="{{ ctrl.code }}" class="table table-hover table-striped table-bordered" align="center" style="width:100%">
                        <thead>
                        <tr>
                            {% for key, item in tableHeader %}
                                {% if key in ctrl.getDefaultColumnsSearch() %}
                                    <th
                                            {% if item.class is defined %} class="{{ item.class }}"{% endif %}
                                            {% if item.style is defined %} style="{{ item.style }}"{% endif %}
                                    >
                                        {{ item.label }}
                                    </th>
                                {% endif %}
                            {% endfor %}
                        </tr>
                        </thead>
                        {% if tableFooter is not empty %}
                            <tfoot>
                            <tr>
                                {% for key, item in tableFooter %}
                                    {% if key in ctrl.getDefaultColumnsSearch() %}
                                        <th
                                                {% if item.class is defined %} class="{{ item.class }}"{% endif %}
                                                {% if item.style is defined %} style="{{ item.style }}"{% endif %}
                                        >
                                            {{ item.label }}
                                        </th>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                            </tfoot>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% block extraJavascriptsFooter %}
    {{ parent() }}
    <script type="text/javascript" src="{{ getResourceUri('/resources/skins/default/bower_modules/datatables.net/js/jquery.dataTables.min.js') }}"></script>
