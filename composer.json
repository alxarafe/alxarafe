{
  "name": "alxarafe/alxarafe",
  "description": "Microframework for rapid application development.",
  "type": "library",
  "homepage": "https://github.com/alxarafe/alxarafe",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Rafael San JosÃ©",
      "email": "rsanjose@alxarafe.com",
      "homepage": "https://alxarafe.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/alxarafe/alxarafe/issues",
    "source": "https://github.com/alxarafe/alxarafe"
  },
  "config": {
    "vendor-dir": "vendor",
    "process-timeout": 0,
    "platform": {
      "php": "8.5"
    }
  },
  "require": {
    "php": ">=8.5",
    "firebase/php-jwt": "^6.10",
    "illuminate/database": "^10.48",
    "illuminate/events": "^10.48",
    "illuminate/view": "^10.48",
    "jenssegers/blade": "^2.0",
    "luracast/restler": "^5.0",
    "maximebf/debugbar": "^1.22",
    "symfony/translation": "^6.4",
    "symfony/var-dumper": "^6.4",
    "symfony/yaml": "^6.4",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "Alxarafe\\Scripts\\": "src/Scripts",
      "Alxarafe\\": "src/Core",
      "CoreModules\\": "src/Modules"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "scripts": {
    "post-install-cmd": [
      "Alxarafe\\Scripts\\ComposerScripts::postUpdate"
    ],
    "post-update-cmd": [
      "Alxarafe\\Scripts\\ComposerScripts::postUpdate"
    ]
  }
}