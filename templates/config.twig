{% extends "index.twig" %}
{% block title %}Configuración de la base de datos{% endblock %}
{% block body %}
    {{ view.newRow(view.blockContainer(view.title('Configuración general de la aplicación')))|raw }}
    <div class="container">
        <form action='index.php?call=config' method='post' accept-charset="utf-8">
            <div class="col-xm-4">&nbsp;</div>
            <div class="col-xm-4">

                {% if (message) %}{{message}}{% endif %}

                <div class="form-group">
                    <label>Motor de base de datos</label>
                    <select id="dbEngineName" name="dbEngineName" class="form-control">
                        {% for dbEngine in dbEngines %}
                            <option {{ post["dbEngineName"]==dbEngine ? "selected":"" }}>{{dbEngine}}</option>
                        {% endfor %}
                    </select>
                </div>

                        {% if skins|length > 0 %}
                            <div class="form-group">
                                <label>Plantilla (Skin)</label>
                                <select id="skin" name="skin" class="form-control">
                                    {% for skin in skins %}
                                        <option {{ post["skin"]==skin ? "selected":"" }}>{{skin}}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        {% endif %}

                {% for key,var in dbConfig %}
                    <div class="form-group">
                        <label>{{key}}</label>
                        <input id="{{key}}" name="{{key}}" class="form-control" type="text" value="{{ var }}" />
                    </div>
                {% endfor %}

                <button name="submit" type="submit" class="btn btn-default">Guardar los cambios</button>
                <!-- <button name="clear" type="submit" class="btn btn-default">Borrar los campos</button> -->
                <button name="cancel" type="submit" class="btn btn-default">Abandonar</button>
            </div>
                <div class="col-x-4">&nbsp;</div>
        </form>
    </div>
    <!-- /#page-wrapper -->
{% endblock %}
